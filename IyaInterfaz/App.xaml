<Application x:Class="IyaInterfaz.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             xmlns:local="clr-namespace:IyaInterfaz"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <sys:Double x:Key="fontSizeHeader">28</sys:Double>
        <sys:Double x:Key="fontSizeNormal">18</sys:Double>
        
        <!-- MarginSB = MarginSmallBottom -->
        <Thickness x:Key="MarginSB">0,0,0,6</Thickness>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="5,3"/>
        </Style>
    </Application.Resources>
</Application>
